<div class="row top-buffer">
  <div class="col-xl-12">
    <h4>Organizations</h4>

    <table class="table">
      <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Users</th>
      </thead>
      <tbody>
        {{#each model as |org|}}
          <tr>
            <td>{{org.id}}</td>
            <td>{{#link-to "organizations.edit" org.id}}{{org.name}}{{/link-to}}</td>
            <td>{{org.users.length}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
