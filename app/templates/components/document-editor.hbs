<div class="row top-buffer">
  <div class="col-xl-12">
    <h4>Document</h4>
    <form {{action "save" on="submit"}}>
      <div class="form-group">
        {{input
          value=this.documentNameValue
          class="form-control document-name"
          placeholder="Name"
        }}
      </div>
      <div class="form-group">
        {{textarea
          value=this.documentTextValue
          cols="80"
          rows="6"
          class="form-control document-contents"
          placeholder="Contents"
        }}
      </div>
      <button {{action "cancel"}} class="btn btn-secondary document-cancel-button">Cancel</button>
      <button type="submit" class="btn btn-primary document-save-button">Save</button>
    </form>
  </div>
</div>